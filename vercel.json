{
  "headers": [
    {
      "source": "/(.*)",
      "headers" : [
        {
          "key" : "X-Content-Type-Options",
          "value" : "nosniff"
        },
        {
          "key" : "X-Frame-Options",
          "value" : "DENY"
        },
        {
          "key" : "Content-Security-Policy",
          "value" : "default-src 'self'; script-src 'self'; img-src 'self'; style-src 'self'"
        }
      ]
    }
  ]
}
